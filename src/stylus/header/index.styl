.Header
  align-items center
  background #F5DA55
  display flex
  flex-direction column
  left 0
  position fixed
  right 0
  top 0
  z-index 10

  &-title
    color #222
    font-size 1.25rem
    line-height 2rem
    margin 0
    text-align center

  &-form
    flex-direction row
    .Form-field
      position relative
      &-name
        background #ecf0f1
        border-radius 1rem 0 0 1rem
        cursor pointer
        line-height 2.7em
        padding-left 1em
        padding-right 1em
        position absolute
        &:focus
          outline none
    .Form-input
      border-radius 1rem
      padding-left 5em
      &:focus
        outline none
        box-shadow 0 0 5px 1px #7f8c8d

  @media (max-width: 399px)
    &-title
      width 100%
    &-form
      margin-bottom .25rem

  @media (min-width: 400px)
    height 2.5rem
    flex-direction row
    justify-content space-between
    &-title
      padding-left 1rem