.Form
  display flex
  flex-direction column
  margin 0
  padding 0 .5em

  &-input
    border none
    box-sizing border-box
    height 2rem
    line-height inherit
    padding .5em

  &-field
    display flex
    flex-direction column
    &-name
      color #666
      font-size .75rem
      padding-left .5em
      display block
      width 100%

  &-button
    border none
    background none
    width 100%
    height 2rem