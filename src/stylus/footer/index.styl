.Footer
  align-items center
  background #F5DA55
  bottom 0
  display flex
  flex-direction column
  left 0
  position fixed
  right 0
  &-text
    margin .5em 0
    &:after
    &:before
      content ' - '
    & a
      color black
      text-decoration none
      &:hover
        text-decoration underline